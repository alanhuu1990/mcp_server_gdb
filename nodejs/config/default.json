{
  "server": {
    "port": 3000,
    "host": "127.0.0.1"
  },
  "websocket": {
    "port": 3001,
    "path": "/ws",
    "cors": {
      "origin": "*",
      "methods": ["GET", "POST"]
    }
  },
  "mcp": {
    "rust_server": {
      "host": "127.0.0.1",
      "port": 8080,
      "protocol": "http"
    },
    "bridge": {
      "reconnect_interval": 5000,
      "max_reconnect_attempts": 10,
      "timeout": 30000
    }
  },
  "debugging": {
    "auto_refresh_interval": 1000,
    "max_log_entries": 1000,
    "variable_update_interval": 500
  },
  "logging": {
    "level": "info",
    "file": "logs/nodejs-bridge.log",
    "console": true
  },
  "security": {
    "enable_cors": true,
    "enable_helmet": true,
    "rate_limit": {
      "window_ms": 900000,
      "max": 100
    }
  }
}
